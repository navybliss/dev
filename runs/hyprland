#!/usr/bin/env bash

mkdir -p "$HOME/personal"
git clone https://aur.archlinux.org/paru.git "$HOME/personal/paru" || echo "already cloned. skipping."
cd "$HOME/personal/paru"
makepkg -si --noconfirm

paru -S --noconfirm --needed ninja gcc cmake meson libxcb xcb-proto xcb-util xcb-util-keysyms libxfixes libx11 libxcomposite libxrender libxcursor pixman wayland-protocols cairo pango libxkbcommon xcb-util-wm xorg-xwayland libinput libliftoff libdisplay-info cpio tomlplusplus hyprlang-git hyprcursor-git hyprwayland-scanner-git xcb-util-errors hyprutils-git glaze hyprgraphics-git aquamarine-git re2 hyprland-qtutils
paru -S --noconfirm --needed aquamarine-git hyprlang-git hyprcursor-git hyprutils-git hyprgraphics-git
#paru -S --noconfirm --needed hyprland

mkdir -p $HOME/personal
git clone --recursive https://github.com/hyprwm/hyprland $HOME/personal/Hyprland
cd $HOME/personal/Hyprland
make all && sudo make install

paru -S --needed --noconfirm sddm-git
paru -S --needed --noconfirm mako # notification daemon
sudo pacman -S --needed --noconfirm pipewire wireplumber # screen sharing
sudo pacman -S --needed --noconfirm xdg-desktop-portal xdg-desktop-portal-hyprland
paru -S --needed --noconfirm hyprland-polkit-agent # handles gui popups
sudo pacman -S --needed --noconfirm qt5-wayland qt6-wayland # qt app support

sudo pacman -S --needed --noconfirm hyprpaper
paru -S hyprpicker-git # color picker
sudo pacman -S udiskie # auto mount usbs etc




#sudo pacman -S hyprland-plugins   # gives you hyprpaper, hyprshot, scratchpad, hyprctrl

